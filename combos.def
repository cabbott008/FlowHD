// https://docs.qmk.fm/#/

SUBS(P001, "I find it interesting that ", KC_I, KC_F)
SUBS(P002, "I have to run off screen for a few minutes. I'll be right back." SS_DELAY(1000) SS_TAP(X_ENTER), KC_B, KC_R)

// Combos relating to Word Enders
SUBS(C151, ",", KC_U, KC_O) // Unspaced Comma
SUBS(C152, ".", KC_O, KC_Y) // Unspaced Period
SUBS(C153, "ts ", LT(4,KC_T), LT(4,KC_SPC)) // ts_


// Obsidian
SUBS(C196, SS_LGUI(SS_LALT(SS_LCTL(SS_LSFT(SS_TAP(X_D))))), KC_D, KC_Y) // Go to Today's Daily Note
SUBS(C197, SS_LGUI(SS_LCTL(SS_TAP(X_SPACE))), KC_M, KC_QUOTE) // Pull up Emoji Picker
SUBS(C192, "[[", KC_N, KC_W) // Create Link Brackets in Obsidian


// General Combos 
SUBS(C205, SS_LSFT(SS_LALT(SS_TAP(X_MINUS))), KC_MINUS, KC_B) // Long Dash
SUBS(C210, SS_LCTL(SS_LALT(SS_TAP(X_ENTER))), KC_X, KC_K) // Maximize Window via Rectangle
SUBS(C287, SS_LCTL(SS_LALT(SS_LGUI(SS_LSFT(SS_TAP(X_R))))), KC_R, KC_C, KC_U) // Add Reminder to Clickup
SUBS(C288, SS_LCTL(SS_LALT(SS_LGUI(SS_LSFT(SS_TAP(X_C))))), KC_C, KC_U) // Add Task to Clickup
SUBS(C289, SS_LALT(SS_LCTL(SS_LGUI(SS_LSFT(SS_TAP(X_Z))))), KC_F, KC_M) // Go to FocusMate
SUBS(C290, SS_LGUI(SS_TAP(X_SPACE)), KC_D, KC_A) // Command-Space to call Alfred
SUBS(C291, SS_LALT(SS_LGUI(SS_TAP(X_C))), KC_R, KC_D, KC_A) // Reveal Alfred Clipboard History
SUBS(C293, SS_LALT(SS_TAP(X_V)), KC_P, KC_V) // Hotkey for TimeStamp


// Vim
SUBS(C398, SS_TAP(X_ESC), KC_N, KC_E) // Escape


TOGG(C999, 2, KC_L, KC_O) // Toggle to Layer 2
TOGG(C900, 4, KC_0, KC_1) // Toggle to Layer 4
TOGG(C901, 4, KC_F10, KC_F1) // Toggle back from Layer 4
