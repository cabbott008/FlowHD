// https://docs.qmk.fm/#/

SUBS(P001, "I find it interesting that ", KC_I, KC_F)
SUBS(P005, "I have to run off screen for a few minutes. I'll be right back." SS_DELAY(1000) SS_TAP(X_ENTER), KC_B, KC_R)

// Unspacing Combos for Various Word Enders
SUBS(C001, ",", KC_U, KC_O) // Unspaced Comma
SUBS(C003, ".", KC_O, KC_Y) // Unspaced Period


// Combo Word Enders
SUBS(C006, SS_LSFT(SS_LALT(SS_TAP(X_MINUS))), KC_MINUS, KC_B) // Long Dash
SUBS(C007, SS_LCTL(SS_LALT(SS_TAP(X_ENTER))), KC_X, KC_K) // Maximize Window via Rectangle

// Dealing with Text Editing
SUBS(C080, SS_LGUI(SS_TAP(X_A)), KC_S, KC_N) // Select All

SUBS(C087, SS_LCTL(SS_LALT(SS_LGUI(SS_LSFT(SS_TAP(X_R))))), KC_R, KC_C, KC_U) // Add Reminder to Clickup
SUBS(C088, SS_LCTL(SS_LALT(SS_LGUI(SS_LSFT(SS_TAP(X_C))))), KC_C, KC_U) // Add Task to Clickup
SUBS(C089, SS_LALT(SS_LCTL(SS_LGUI(SS_LSFT(SS_TAP(X_Z))))), KC_F, KC_M) // Go to FocusMate
SUBS(C090, SS_LGUI(SS_TAP(X_SPACE)), KC_D, KC_A) // Command-Space to call Alfred
SUBS(C091, SS_LALT(SS_LGUI(SS_TAP(X_C))), KC_R, KC_D, KC_A) // Reveal Alfred Clipboard History
SUBS(C093, SS_LALT(SS_TAP(X_V)), KC_P, KC_V) // Hotkey for TimeStamp
SUBS(C094, "qmk compile -kb moonlander -km FlowHD", KC_LEFT, KC_RIGHT) // Make firmware
SUBS(C095, "cd Documents/qmk_firmware", KC_LEFT, KC_RIGHT, KC_N) // Firmware Directory

// Obsidian
SUBS(C096, SS_LGUI(SS_LALT(SS_LCTL(SS_LSFT(SS_TAP(X_D))))), KC_D, KC_Y) // Go to Today's Daily Note
SUBS(C097, SS_LGUI(SS_LCTL(SS_TAP(X_SPACE))), KC_M, KC_QUOTE) // Pull up Emoji Picker
SUBS(C092, "[[", KC_N, KC_W) // Create Link Brackets in Obsidian

// Vim
SUBS(C098, SS_TAP(X_ESC), KC_N, KC_E) // Escape

TOGG(C099, 2, KC_L, KC_O) // Toggle to Layer 2
TOGG(C100, 4, KC_0, KC_1) // Toggle to Layer 4
TOGG(C101, 4, KC_F10, KC_F1) // Toggle back from Layer 4
